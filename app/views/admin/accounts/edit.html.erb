<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <h2>Edit user</h2>
    
    <%= form_for [:admin, @account] do |f| %>
      <%= render "shared/error_messages", object: @account %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :user_name %>
        <%= f.text_field :user_name, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :age %>
        <%= f.number_field :age, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :phone_number %>
        <%= f.number_field :phone_number, autofocus: true, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :current_password %>
        <%= f.password_field :current_password, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, class: "form-control" %>
        <%= f.hidden_field :avatar_cache %>
      </div>

      <div class="actions">
        <%= f.submit t(:save), class: "btn btn-primary form-control" %>
      </div>
    <% end %>
  </div>
</div>  
