<%= form_for [:admin, @movie] do |f| %>
  <%= render "shared/error_messages", object: @movie %>
  <div class="form-group">
    <%= f.label :image %>    
    <%= f.file_field :image %>
  </div>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>
  <%= f.label :genre_select %>
  <%= f.collection_check_boxes :genre_ids, @genres, :id, :name do |s| %>
    <div class="checkbox">
      <%= s.check_box %>
      <%= s.label %>
    </div>
  <% end %>
  <div class="form-group" height="200px">
    <%= f.label :content %>
    <%= f.bootsy_area :content, class: "form-control", rows: 7 %>
  </div>
  <%= f.submit t("new"), class: "btn btn-primary" %>
<% end %>
